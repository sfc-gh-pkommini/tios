# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# For terraform files
[{*.json, *.sh, *.yaml, *.yml}]
indent_style = space
indent_size = 2

# For terraform files
[{*.py}]
indent_style = space
indent_size = 4
